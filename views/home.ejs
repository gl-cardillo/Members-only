<%- include('./partials/head.ejs') %> 
  <body>      
    <%- include('./partials/navbar.ejs') %> 
    <div class="messages-container">
      <% if (messages) { %> 
        <% messages.forEach(function(message) { %>
      <div class="message-container-img">
        <% if (currentUser?.isAdmin) { %>
        <form  class="delete-button-form" action="delete" method="POST">
          <input type="hidden" name="id" value="<%= message._id %>">
          <button class="delete-button" type="submit">X</button>
        </form>
        <% } %>
        <img src="/images/V-2.png" alt="">
        <div class="message-container">        
          <p class="title"><%= message.title %></p>
          <p class="message"><%= message.message %></p>
          <div>
            <% if (currentUser?.isMember) { %>
            <p class="username">-<%= message.username %></p>
            <p class="date"><%= message.date_formatted %></p>            
            <% } else { %>
            <p class="username">-Anonymous</p>
            <p class="date">Date unkown</p>              
            <% } %>
          </div>
        </div>
      </div>
      <% })} else { %>
      <p>No messages</p>
      <% } %>
    </div>
    <%- include('./partials/footer.ejs') %> 
  </body>
</html>